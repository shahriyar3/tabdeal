    <div class="col-md-4">
        <label class="control-label" for="config_themeconfig_theme" data-toggle="tooltip" data-container="body" data-placement="top" title="" data-original-title="{{ 'mautic.core.config.theme.rounded_corners.tooltip'|trans }}">
{{ 'mautic.core.config.theme.rounded_corners'|trans }}<i class="ri-question-line ml-3"></i></label>


</div>
<div class="col-md-8">
    <div class="radio-group radio-group--inline">
        <div class="radio-option">
            <input type="radio" id="rounded-corners-0" name="rounded-corners" value="false" data-attribute-toggle="rounded-corners" data-attribute-value="0" checked="">
