                <div class="rounded-corners-preview rounded-corners-preview--0"></div>
            </label>
        </div>
        <div class="radio-option">
            <input type="radio" id="rounded-corners-8" name="rounded-corners" value="true" data-attribute-toggle="rounded-corners" data-attribute-value="8">
            <label for="rounded-corners-8">
                <div class="rounded-corners-preview rounded-corners-preview--8"></div>
            </label>
        </div>
        <div class="radio-option">
            <input type="radio" id="rounded-corners-16" name="rounded-corners" value="true" data-attribute-toggle="rounded-corners" data-attribute-value="16">
            <label for="rounded-corners-16">
                <div class="rounded-corners-preview rounded-corners-preview--16"></div>
            </label>
        </div>
        <div class="radio-option">
            <input type="radio" id="rounded-corners-32" name="rounded-corners" value="true" data-attribute-toggle="rounded-corners" data-attribute-value="32">
